<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.MapFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <fragment
                android:id="@+id/map_pinpoint_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_marginBottom="190dp"/>

        <ImageButton
                android:id="@+id/ic_pinpoint_prev"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/ic_arrow_forward_black"
                android:scaleX="-1"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:background="@color/white"
                android:contentDescription="@string/img_button_close_description"/>



    </RelativeLayout>

        <!-- Adding bottom sheet after main content -->
        <LinearLayout
                      android:id="@+id/bottom_sheet_pin_point"
                      android:layout_width="match_parent"
                      android:layout_height="190dp"
                      android:paddingStart="20dp"
                      android:paddingEnd="20dp"
                      android:orientation="vertical"
                      app:behavior_hideable="false"
                      app:behavior_peekHeight="190dp"
                      android:background="@color/white"
                      android:elevation="8dp"
                      app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <TextView
                    android:id="@+id/pin_suggestion_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Drag pin to adjust starting point"
                    android:textColor="@color/black"
                    android:alpha="0.9"
                    android:layout_gravity="center"/>

            <View

                    android:id="@+id/pin_border_start"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@android:color/darker_gray"
                   />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Confirm Starting Point"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/black"/>

            <TextView
                    android:id="@+id/pin_address_start"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:alpha="0.9"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:background="@drawable/pin_search_bar"
                    android:singleLine="true"
                    android:gravity="center_vertical"
            >
            </TextView>

            <Button
                    android:id="@+id/pin_confirm_start"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:text="CONFIRM"
                    android:textStyle="bold"
                    android:textSize="19sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:background="@color/black"
                   />

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>